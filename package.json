  "devDependencies": {
    "eslint": "^5.9.0",
    "jest": "^23.6.0"
  },


  
  "jest": {
    "testEnviroment": "node",
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": -10
      }
    }
  },

  "eslintConfig": {
    "env": {
      "node": true
    },
    "rules": {
      "eqeqeq": "error",
      "no-undef": "error",
      "comma-dangle": "warn",
      "indent": ["error", "tab"],
      "prefer-template": "warn",
      "no-empty": "error",
      "no-redeclare": "error",
      "no-unused-vars": "error",
      "no-const-assign": "error",
      "no-var": "error",
      "prefer-const": "warn",
      "global-require": "error"
    }

  }

}
